<%= form_for @article do |f| %>
 
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "erro") %> nao permitiram a criação desse artigo
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <div class="form-horizontal">
    <div class="form-group">
      <p>
        <%= f.label "Título"%><br>
        <div class="col-sm-2 control-label">
          <%= f.text_field :title, placeholder: "Título do Artigo", class: "form-control"%>
        </div>   
      </p>
    </div>
     
    <div class="form-group">
      <p>
        <%= f.label "Texto" %><br>
        <div class="col-sm-4">
          <%= f.text_area :text, placeholder: "Texto do Artigo", class: "form-control", rows: 10 %>
        </div> 
      </p>
    </div>

    <div class="form-group">
      <p>
        <%= f.submit "Enviar", class: "btn btn-default" %>
      </p>
    </div>
  </div>
 
<% end %>

