<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label "Autor" %><br>
    <%= f.text_field :commenter, placeholder: "Autor", class: "form-control"%>
  </p>
  <p>
    <%= f.label "Comentário" %><br>
    <%= f.text_area :body, placeholder: "Comentário", class: "form-control" %>
  </p>
  <p>
    <%= f.submit "Criar comentário", class: "btn btn-success" %>
  </p>
<% end %>